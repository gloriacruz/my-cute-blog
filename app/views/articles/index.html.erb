<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path %>
<hr>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <!--%= render @articles %-->
  <!--%= render :partial => "article", :collection => @articles, :as => :item %-->

  <% @articles.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.text.slice /\A(\S+\s){50}/ %></td>
      <td><%= link_to 'Show', article_path(item) %></td>
      <td><%= link_to 'Edit', edit_article_path(item) %></td>
      <td><%= link_to 'Destroy', article_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>
