<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<!--%= render @article.comments %-->
<hr>
<!-- Comments -->
<h2>Comments</h2>

  <% @article.comments.each do |comment| %>
    <%= render partial: 'comments/comment', locals: { comment: comment } %>
  <% end %>

<hr>
<!-- New Comment -->
<h2>Add a comment:</h2>
  <%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
